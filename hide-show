<!DOCTYPE html>

<!--
	The link starts off hidden, but is displayed when the user clicks on the button.
-->

<html>
	<body>
		<button onclick="myFunction()">Hide/Show</button>
		<p id="call-link-container"><a href="#">Call Now!</a></p>
	</body>

	<script>
		var x = document.getElementById("call-link-container");
		x.style.display = "none";
		function myFunction() {
			var x = document.getElementById("call-link-container");
			if (x.style.display === "none") {
				x.style.display = "block";
			} else {
				x.style.display = "none";
			}
		}
	</script>

</html>

